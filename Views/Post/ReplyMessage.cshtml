@model CoachCue.ViewModels.MessageViewModel

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_PostLayout.cshtml";
}

<div class="msg-header">
    <h2>
        <input type="hidden" id="pst-type" value="msg" />
        <i class="icon-comment"></i>
        <span style="margin-left: 8px;">New Comment</span>
    </h2>
</div>

@{Html.RenderPartial("_MessageCtrl", model: Model);}

<div class="reply-message">
    <div class="row">
        <div class="user-avatar height" style="background: url(/assets/img/avatar/@Model.User.ProfileImage) 50% 50% no-repeat;"></div>
        <div class="msg-text">
            <div class="reply-username">@Model.ParentMessage.Name <span class="reply-time">@@@Model.ParentMessage.UserName</span></div>
            <div class="reply-time">@Model.ParentMessage.DateCreated.ToLongDateString() @Model.ParentMessage.DateCreated.ToShortTimeString()</div>
            <div class="reply-text">@Html.Raw(Model.ParentMessage.Text)</div>
        </div>
    </div>
</div>