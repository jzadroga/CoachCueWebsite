@model CoachCue.ViewModels.MessagesViewModel
@using CoachCue.ViewModels
@using CoachCue.Model


@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2>User Messages</h2>

<div class="row">
    <div class="span12">
       
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>From</th>
                    <th>Message</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                 @foreach (var msg in Model.Messages)
                {
                <tr>
                    <td>
                        <form action='@Url.Action("DeleteMessage", "ControlPanel")' method="post">
                            <input type="hidden" name="messageId" value="@msg.Id" />
                            <button type="submit" class="btn btn-mini">Delete</button>
                        </form>
                    </td>
                    <td>@msg.Name</td>
                    <td>@Html.Raw(msg.Text)</td>
                    <td>@msg.DateCreated.ToShortDateString()</td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>