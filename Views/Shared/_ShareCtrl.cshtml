    <!-- share a message/matchup -->
    <div class="panel panel-default message-share">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li class="active"><a id="select-new-message" href="#tabMsg" data-toggle="tab"><span>Post a Message</span></a></li>
                <li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a role="button" data-toggle="modal" class="select-new-matchup" href="#register-modal"><span>Create a Matchup</span></a>
                    }
                    else
                    {
                        <a id="select-new-matchup" data-slidepanel="panel" role="button" href="/Post/NewMatchup?ply1=@Model.PlayerID" class="ms-action-matchup select-new-matchup"><span>Create a Matchup</span></a>
                    }
                </li>
            </ul>
        </div>

        <div class="panel-body">      
            <div class="tabbable">
                <div class="tab-content">
                    <div id="tabMsg" class="tab-pane active">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a role="button" data-toggle="modal" href="#register-modal">Share what's new..</a>
                        }
                        else
                        {
                            <a id="new-message-panel" data-slidepanel="panel" role="button" href="/Post/NewMessage?ply=@Model.PlayerID" class="ms-action-conversation">Share what's new..</a>
                        }
                    </div>
                    <div id="tabMtchp" class="tab-pane">
                        <a id="new-matchup-panel" data-slidepanel="panel" role="button" href="/Post/NewMatchup?ply1=@Model.PlayerID" class="ms-action-matchup">Matchup</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
   

