@model PlayerPopover
@using CoachCue.Model;    

<div class="player-tweets">

    <div class="tweet-list">
        @foreach (StreamContent streamItem in Model.TwitterContent)
        {
            <div class="item player-item clear" data-player="@streamItem.PlayerID">
                <div class="content">
                    <img class="avatar player-item-avatar" src="@streamItem.ProfileImg" />

                    <div class="content-header">
                        <a title="first tooltip" class="username" target="_blank" href="http://twitter.com/@streamItem.UserName">@streamItem.FullName</a>
                        <span class="time">@streamItem.TimeAgo</span>
                    </div>
                    <span class="matchup-message">@Html.Raw(streamItem.Tweet.Message)</span>
                </div>
            </div>
        }
    </div>

</div>