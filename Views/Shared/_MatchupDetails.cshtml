@model CoachCue.ViewModels.MyMatchupViewModel
@using CoachCue.Model;

<input type="hidden" id="find-coachID" />
<div class="span8 section matchup-details-item">

    <div id="matchup-details">
        @if (Model.Matchup.MatchupItem.Id != "0") {
            <div class="weekly-matchup-item mymatchup" data-matchup="@Model.Matchup.MatchupItem.Id">
                @{ Html.RenderPartial("_StreamItem", model: Model.Matchup); }
            </div>
        }

        @if (Model.RelatedMatchups.Count() > 0)
        {
            if (Model.Matchup.MatchupItem.Id != "0")
            {
                <h2 class="related-matchups">@Model.Matchup.MatchupItem.Type Related Matchups</h2>
            }

            foreach (var relatedMatchup in Model.RelatedMatchups)
            {
                <div class="weekly-matchup-item mymatchup" data-matchup="@relatedMatchup.MatchupItem.Id">
                    @{Html.RenderPartial("_StreamItem", model: relatedMatchup); }
                </div>
            }
        }
    </div>
</div>