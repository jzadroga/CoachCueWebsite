@model CoachCue.ViewModels.MessagesViewModel
@using CoachCue.ViewModels
@using CoachCue.Model


@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2>User Messages</h2>

<div class="row">
    <div class="span12">
       
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>From</th>
                    <th>Message</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                 @foreach (message msg in Model.Messages)
                {
                <tr>
                    <td><button data-message='@msg.messageID' class="btn btn-mini edit-points">Delete</button></td>
                    <td>@msg.user.fullName</td>
                    <td>@Html.Raw(msg.messageText)</td>
                    <td>@msg.dateCreated.ToShortDateString()</td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>