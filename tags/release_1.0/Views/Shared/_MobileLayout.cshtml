<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href='@Url.Content("~/assets/css/themes/CoachCue.css")' />
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile.structure-1.3.2.min.css" /> 
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.js"></script>
    <script src="@Url.Content("~/assets/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/main.mobile.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/helpers.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/tasks.js")" type="text/javascript"></script>


    <link href='@Url.Content("~/assets/css/global.css")' rel="stylesheet" type="text/css" />
    <link href='@Url.Content("~/assets/css/global.mobile.css")' rel="stylesheet" type="text/css" />

    <title>@ViewBag.Title</title>
    @{Html.RenderPartial("_GoogleAnalytics");}
</head>
<body>
    <div data-role="page" id="mainPage">
        <div data-role="panel" id="menuPanel">
        
            <ul data-role="listview">
                <!--<li data-role="fieldcontain"><input type="search" name="search-2" placeholder="Search for Player" id="search-2" value="" /></li>-->

	            @if (!User.Identity.IsAuthenticated){   
                <li ><a data-position-to="window" data-rel="popup" href="#popupLogin">Login</a></li>
                }
                else{
                <li data-role="list-divider" id="login-welcome" role="heading">
                    <img class="avatar player-item-avatar welcome-avatar" src='@Url.Content("~/assets/img/avatar/" + @Model.Avatar)' />
                    <span>Hello, @Model.Name</span>  
                </li> 
                }
	            <li class="ui-btn-active"><a href='@Url.Action("Index", "Home")'">Player Stream</a></li>
            </ul>
        </div><!-- /panel -->

        <div data-theme="a" data-role="header" data-position="fixed">
            <a data-iconpos="notext" href="#menuPanel" data-role="button" data-inline="true" data-icon="bars" data-corners="true" data-shadow="true" data-iconshadow="true" data-theme="d"></a>
            <h3 class="mobile-header">CoachCue</h3>
        </div>
        <div data-role="content">
            @RenderBody()

            <div data-role="popup" id="popupLogin" data-theme="a" data-disabled="false" data-shadow="true" data-corners="true" data-transition="none" data-position-to="origin" data-dismissible="true">
			    <form action="@Url.Action("Login", "Account")" method="post">
				    <div style="padding:10px 20px;">
				      <h3>Please sign in</h3>
		              <label for="username" class="ui-hidden-accessible ui-input-text">Username:</label>
		              <div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-a">
                            <input type="text" name="username" id="username" value="" placeholder="username" data-theme="a" />
		              </div>
		              <label for="pw" class="ui-hidden-accessible ui-input-text">Password:</label>
		              <div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-a">
                            <input type="password" name="passwrd" id="passwrd" value="" placeholder="password" data-theme="a" />
		                    <input style="display: none" type="checkbox" id="rememberMe" name="rememberMe" />
                      </div>
		    	      <div data-corners="true" data-shadow="true" data-iconshadow="true" data-theme="b">
                          <button type="submit" data-theme="b">Login</button>
		    	      </div>
				    </div>
			    </form>
		    </div>

        </div>
    </div>
</body>
</html>
